# Firebase Configuration
# Copy this file to .env.local and fill in your Firebase project credentials
# Get these values from: Firebase Console → Project Settings → Your Apps
# Keep values unquoted.

NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key-here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890
# Modern default RTDB URL format:
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com

# Optional setup script override (default: us-central1)
FIREBASE_REGION=us-central1

# Firebase Admin SDK (server-side only)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
# Keep literal \n characters in this value when copied from your service account JSON
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n

# Sentry Monitoring / Error Tracking
# Public DSN for client-side error reporting (Browser SDK)
NEXT_PUBLIC_SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
# Server DSN for Node/Edge runtime errors (optional: falls back to NEXT_PUBLIC_SENTRY_DSN)
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
# Auth token used at build time to upload source maps
SENTRY_AUTH_TOKEN=sntrys_your_auth_token_here
# Sentry org/project slugs for source map upload
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
# Optional explicit release (defaults to git commit SHA in CI)
SENTRY_RELEASE=
