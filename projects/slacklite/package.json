{
  "name": "slacklite",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:firestore-rules": "firebase emulators:exec --only firestore \"pnpm vitest run tests/firestore.rules.spec.ts\"",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "emulators": "firebase emulators:start",
    "emulators:export": "firebase emulators:export ./emulator-data",
    "emulators:import": "firebase emulators:start --import=./emulator-data"
  },
  "dependencies": {
    "@firebase/auth": "^1.12.0",
    "@firebase/database": "^1.1.0",
    "@firebase/firestore": "^4.11.0",
    "@sentry/nextjs": "^10.39.0",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "date-fns": "^4.1.0",
    "firebase": "^11.10.0",
    "firebase-admin": "^13.6.1",
    "next": "15.5.12",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-window": "^1.8.10"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.3",
    "@firebase/rules-unit-testing": "^4.0.1",
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "20.19.33",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "9.39.2",
    "eslint-config-next": "15.5.12",
    "eslint-config-prettier": "10.1.8",
    "jsdom": "^28.1.0",
    "postcss": "8.5.6",
    "prettier": "3.8.1",
    "tailwindcss": "3.4.19",
    "typescript": "5.9.3",
    "vitest": "^4.0.18"
  }
}
